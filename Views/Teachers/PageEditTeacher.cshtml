@model SMS_MVC.Models.Model_Tables.Teachers
@{
    Layout = null;
}

<style>
    .add-user-container {
        background-color: #fff;
        border-radius: 12px;
        padding: 30px 40px;
        width: 650px;
        margin: 40px auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', sans-serif;
    }

        .add-user-container h2 {
            margin-bottom: 5px;
            font-size: 22px;
            font-weight: 600;
            color: #1a1a1a;
            text-align: left;
        }

        .add-user-container p {
            color: #666;
            margin-bottom: 25px;
            font-size: 14px;
        }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px 25px;
    }

    .form-field label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
    }

    .form-field input,
    .form-field select {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
    }

    .form-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 30px;
    }

    .btn-cancel {
        background-color: #f3f3f3;
        color: #333;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
    }

    .btn-add {
        background-color: #6b46c1;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
    }

    .btn-cancel:hover {
        background-color: #e1e1e1;
    }

    .btn-add:hover {
        background-color: #553c9a;
    }

    /* Full row for dropdowns */
    .col-span-2 {
        grid-column: span 2;
    }
</style>

<div class="add-user-container">

    <h2>Edit a Teacher</h2>
    <p>Update the teacher's information below</p>

    <form method="post" asp-action="OnUpdateTeacherClicked">
        <input type="hidden" asp-for="id" />

        <div class="form-grid">
            <!-- Select User -->
            <div class="form-field col-span-2">
                <label>Select User *</label>
                <select asp-for="UserId" asp-items="ViewBag.UserList">
                    <option value=@Model.UserId></option>
                </select>
            </div>

            <!-- Full Name -->
            <div class="form-field">
                <label>Full Name *</label>
                <input asp-for="Name" placeholder="e.g., Dr. Sarah Johnson" />
            </div>

            <!-- Email -->
            <div class="form-field">
                <label>Email *</label>
                <input asp-for="Email" placeholder="e.g., teacher@demoschool.edu" />
            </div>

            <!-- Phone -->
            <div class="form-field">
                <label>Phone *</label>
                <input asp-for="PhoneNumber" placeholder="e.g., +1 (555) 123-4567" />
            </div>

            <!-- Subject -->
            <div class="form-field">
                <label>Subject *</label>
                <select asp-for="SubjectId" asp-items="ViewBag.SubjectList">
                    <option value="">-- Select Subject --</option>
                </select>
            </div>

            <!-- Qualification -->
            <div class="form-field">
                <label>Qualification *</label>
                <input asp-for="Qualification" placeholder="e.g., M.Sc Mathematics, B.Ed" />
            </div>

            <!-- Experience -->
            <div class="form-field">
                <label>Experience *</label>
                <input asp-for="Experience" placeholder="e.g., 8 years" />
            </div>

            <!-- Joining Date -->
            <div class="form-field">
                <label>Joining Date *</label>
                <input asp-for="JoiningDate" type="date" />
            </div>

        </div>

        <!-- Buttons -->
        <div class="form-buttons">
            <button type="submit" class="btn-add">Update Teacher</button>
        </div>
    </form>

    <!-- Cancel Button (Separate Form) -->
    <form method="get" asp-action="Index">
        <div class="form-buttons">
            <button type="submit" class="btn-cancel">Cancel</button>
        </div>
    </form>

</div>
