@{
    Layout = "_LayoutDashboard";
}

<style>
    .classes-dashboard {
        font-family: 'Segoe UI', sans-serif;
        padding: 30px;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .header-section h1 {
            font-size: 28px;
            font-weight: 700;
            margin: 0;
        }

        .header-section p {
            color: gray;
            margin-top: 5px;
        }

    .add-class-btn {
        background-color: #6A5AE0;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        cursor: pointer;
    }

    .summary-container {
        display: flex;
        gap: 20px;
        margin-top: 30px;
    }

    .summary-card {
        flex: 1;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
    }

        .summary-card .icon {
            font-size: 26px;
        }

        .summary-card .count {
            font-size: 28px;
            font-weight: bold;
            margin-top: 10px;
        }

        .summary-card .label {
            color: gray;
            margin-top: 5px;
        }

    .filter-bar {
        display: flex;
        gap: 15px;
        margin: 30px 0;
    }

    .search-box {
        flex: 1;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .filter-dropdown {
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .classes-cards {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .classes-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: calc(33% - 20px);
    }

        .classes-card h3 {
            margin: 0;
            font-size: 18px;
        }

        .classes-card p {
            margin: 4px 0;
            color: gray;
            font-size: 14px;
        }

    .badge {
        display: inline-block;
        background-color: #EAEAEA;
        border-radius: 5px;
        padding: 4px 8px;
        margin-right: 5px;
        font-size: 12px;
    }
</style>

<div class="classes-dashboard">

    <!-- Header Section -->
    <div class="header-section">
        <div>
            <h1>Classes</h1>
            <p>Manage all classes and assigned teachers</p>
        </div>

        <form method="get" asp-action="PageAddClass">
            <button type="submit" class="add-class-btn">+ Add Class</button>
        </form>
    </div>

    <!-- Summary Cards -->
    <div class="summary-container">
        <div class="summary-card">
            <div class="icon">📚</div>
            <div class="count">@ViewBag.TotalClasses</div>
            <div class="label">Total Classes</div>
        </div>
    </div>

    <!-- Search & Filters -->
    <div class="filter-bar">
        <form method="get" asp-action="Index" style="display:flex; gap:15px; width:100%;">
            <input type="text"
                   name="search"
                   value="@ViewBag.Search"
                   class="search-box"
                   placeholder="Search classes by Name..." />

            <select name="GradeFilter" class="filter-dropdown" onchange="this.form.submit()">
                <option value="All">All Grades</option>
                @foreach (var grade in ViewBag.GradesList)
                {
                    <option value="@grade"
                            selected="@(ViewBag.SelectedGrade == grade)">
                        @grade
                    </option>
                }

                @* @foreach (var grade in ViewBag.SelectedGrade as SelectList)
                {
                    <option value="@grade.Value"
                            selected="@(ViewBag.SelectedGrade == grade.Value)">
                        @grade.Text
                    </option>
                } *@
            </select>

            <select name="SectionFilter" class="filter-dropdown" onchange="this.form.submit()">
                <option value="All">All Sections</option>
                @foreach (var aSection in ViewBag.SectionsList)
                {
                    <option value="@aSection"
                            selected="@(ViewBag.SelectedSection == aSection)">
                        @aSection
                    </option>
                }
            </select>

        </form>
    </div>

    <!-- Classes Cards -->
    <div class="classes-cards">
        @foreach (var c in ViewBag.ClassesList)
        {
            <div class="classes-card">
                <h3>@c.ClassName</h3>
                <p>ClassTeacher: @c.ClassTeacherName</p>
                @* <p>Subject: @c.SubjectName</p> *@
                <p>GradeName: @c.GradeName</p>
                <p>SectionName: @c.SectionName</p>
                <p>
                    <form method="post" asp-action="PageEditClass" asp-route-id=@c.id>
                        <button class="btn btn-primary px-4" id="EditClass">Edit Class</button>
                    </form>
                </p>
            </div>
        }
    </div>

</div>
