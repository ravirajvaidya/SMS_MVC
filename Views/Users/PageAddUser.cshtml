@model SMS_MVC.Models.Model_Tables.Users
@{
    Layout = null;
}

<style>
    .add-user-container {
        background-color: #fff;
        border-radius: 12px;
        padding: 30px 40px;
        width: 650px;
        margin: 40px auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', sans-serif;
    }

        .add-user-container h2 {
            margin-bottom: 5px;
            font-size: 22px;
            font-weight: 600;
            color: #1a1a1a;
        }

        .add-user-container p {
            color: #666;
            margin-bottom: 25px;
            font-size: 14px;
        }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px 25px;
    }

    .form-field label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
    }

    .form-field input, .form-field select {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
    }

    .form-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 30px;
    }

    .btn-cancel {
        background-color: #f3f3f3;
        color: #333;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
    }

    .btn-add {
        background-color: #6b46c1;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
    }

    .btn-cancel:hover {
        background-color: #e1e1e1;
    }

    .btn-add:hover {
        background-color: #553c9a;
    }
</style>

<div class="add-user-container">

    <h2>Add New User</h2>
    <p>Create a new user account for the school management system</p>

    <form method="post" asp-action="OnAddUserClicked">
        <div class="form-grid">

            <!-- User Name -->
            <div class="form-field">
                <label>User Name *</label>
                <input asp-for="UserName" placeholder="e.g., John Doe" />
            </div>

            <!-- Email -->
            <div class="form-field">
                <label>Email *</label>
                <input asp-for="Email" placeholder="e.g., john.doe@school.com" />
            </div>

            <!-- Role -->
            <div class="form-field">
                <label>Role *</label>
                <select asp-for="RoleId" asp-items=ViewBag.Roles>
                    <option value="">-- Select Role --</option>
                </select>
            </div>

            <!-- Password -->
            <div class="form-field">
                <label>Password</label>
                <input asp-for="Password" type="password" placeholder="e.g., ********" />
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-buttons">
            <button type="submit" class="btn-add">Add User</button>
        </div>
    </form>

    <form method="get" asp-action="Index">
        <div class="form-buttons">
            <button type="submit" class="btn-cancel">Cancel</button>
        </div>
    </form>

</div>
